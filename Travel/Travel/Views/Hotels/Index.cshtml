@model List<Hotel>
<div class="col-12">
    <div class="card">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-header">Tags</h5>
            <a asp-action="Create" class="btn rounded-pill btn-primary text-white " style="margin-right:20px">Create</a>
        </div>
        <div class="card-body">
            <div>
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-striped dataTable no-footer" id="table-1" role="grid" aria-describedby="table-1_info">
                            <thead>
                                <tr role="row">

                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Country</th>
                                    <th>City</th>
                                    <th>Category</th>
                                    <th>Star</th>
                                    <th>Price</th>
                                    <th>Is Domestic</th>
                                    <th>Status</th>
                                    <th style="text-align:right">Actions</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (Hotel item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/assets/img/@item.Image" style="width:80px;height:80px;object-fit:cover" />
                                        </td>

                                        <td>
                                            @item.Name
                                        </td>

                                        <td>
                                            @item.Country
                                        </td>

                                        <td>
                                            @item.City
                                        </td>

                                        <td>
                                            @foreach (HotelCategory hotelCategory in item.HotelCategories)
                                            {
                                                @hotelCategory.HotelType.Name
                                            }
                                        </td>

                                        <td>
                                            @item.Star
                                        </td>
                                        <td>
                                            @item.Price
                                        </td>
                                        <td>
                                            @if (item.IsDomestic)
                                            {
                                                <span>Yerli</span>
                                            }
                                            else
                                            {
                                                <span>Xarici</span>

                                            }
                                        </td>
                                        
                                        <td>
                                                @if (item.İsDeactive)
                                                {
                                                <span class="text-danger">Passiv</span>
                                                }
                                                else
                                                {
                                                <span class="text-success">Active</span>
                                                }
                                        </td>                                       
                                        <td>
                                            <div class="d-flex justify-content-end">
                                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" style="margin-right:5px">
                                                    <i class="fas fa-edit mr-1"></i> Update
                                                </a>
                                                <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" style="margin-right:5px">
                                                    <i class="far fa-eye"></i> Detail
                                                </a>
                                                @if (item.İsDeactive)
                                                {
                                                    <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm" style="margin-right:5px">  <i class="fas fa-trash-alt mr-1"></i> Activate</a>

                                                }
                                                else
                                                {
                                                    <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" style="margin-right:5px">  <i class="fas fa-trash-alt mr-1"></i>DeActivate</a>

                                                }


                                            </div>
                                        </td>
                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

