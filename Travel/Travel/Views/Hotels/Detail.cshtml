@model Hotel

<div class="form-row">
    <div class="form-group col-md-4">
        <h6>Name</h6>
        <h4>@Model.Name</h4>
    </div>
    <div class="form-group col-md-4">
        <h6> Categories </h6>
        <h4>@Model.HotelCategories</h4>
    </div>
    <div class="form-group col-md-4">
        <h6> Is Local </h6>
        @if (Model.IsDomestic)
        {
            <h4>Yerli</h4>

        }
        else
        {
            <h4>Xarici</h4>

        }
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-4">
        <h6>Country</h6>
        <h4>@Model.Country</h4>
    </div>
    <div class="form-group col-md-4">
        <h6> City </h6>
        <h4>@Model.City</h4>
    </div>
    <div class="form-group col-md-4">
        <h6> Adress </h6>
        <h4>@Model.Adress</h4>
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-4">
        <h6>Telephone</h6>
        <h4>@Model.PhoneNumber</h4>
    </div>
    <div class="form-group col-md-4">
        <h6> Email </h6>
        <h4>@Model.Email</h4>
    </div>
    <div class="form-group col-md-4">
        <h6> Website </h6>
        <h4>@Model.WebSite</h4>
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-4">
        <h6>Room Avaiable</h6>
        @if (Model.RoomAvailable)
        {
            <h4>Hal Hazırda otaq mövcud deyil</h4>

        }
        else
        {
            <h4>Otaq Mövcuddur</h4>

        }
    </div>
    <div class="form-group col-md-4">
        <h6> Price </h6>
        <h4>@Model.Price</h4>
    </div>
</div>
<div class="form-row ">
    <div class="form-group col-md-6" style="text-align:center">
        <h4 class="mb-4 text-md  ">Info</h4>
        <h5>@Model.Info</h5>
    </div>
</div>

<div class="align-items-center">
    <h3 class="mb-4 text-md  ">Image</h3>

    <img src="~/assets/img/@Model.Image">
</div>

<a asp-action="Index" class="btn btn-dark text-white">Go Back</a>

