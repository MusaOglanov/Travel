@model List<HotelType>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-header">Hotel Types</h5>
                <a asp-action="Create" class="btn btn-outline-primary btn-sm" style="margin-right:20px">Create</a>
            </div>
            <div class="card-body">
                <div class="table-responsive text-nowrap">
                    <table id="myTable" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                               
                                <th style="text-align:right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (HotelType item in Model)
                            {
                                <tr>

                                    <td>
                                        <i class="text-danger me-3"></i> <strong>@item.Name</strong>
                                    </td>
                                   
                                    <td>

                                        <div class="d-flex justify-content-end">
                                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" style="margin-right:5px"><i class="fas fa-edit mr-1"></i>Update</a>

                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


